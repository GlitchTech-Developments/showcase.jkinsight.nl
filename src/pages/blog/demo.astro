---
import { useStoryblokApi } from "@storyblok/astro";

import RootLayout from "@layout/RootLayout.astro";
import BlogPost from "@storyblok/blog/BlogPost.astro";

const storyblokApi = useStoryblokApi();

const { data } = await storyblokApi.get("cdn/stories/blog/demo", {
	version: import.meta.env.DEV ? "draft" : "published",
});

const content = data.story.content;
---

<RootLayout>
	<h1 class="text-red-600">Astro</h1>
	<BlogPost blok={content} />
</RootLayout>
